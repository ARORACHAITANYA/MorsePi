
/* Morse code C++ header file for Raspberry Pi to use with LEDs.
system() function used for setting GPIO_GEN pin and blinking led.
One unit is 0.5 seconds, so a dot equals 0.5 seconds and a dash equals 1.5 seconds (3u).
A pause is 1 second long and a space is rapid 10 blinks. */


#include <cstdio>
#include <cstring>
#include <cstdlib>
#include <unistd.h>



char ledon[40];
char ledoff[40];

void setgpiopin (int pinnum)
{
    char setpin[50];
    sprintf(setpin, "gpio mode %d out", pinnum);
    system(setpin);
    sprintf(ledon, "gpio write %d 1", pinnum);
    sprintf(ledoff, "gpio write %d 0", pinnum);
   
}

void blinkt(float time) 
{
	system(ledon);
	sleep(time);
	system(ledoff);

}

void blinkdot() 
{
	system(ledon);
	sleep(0.5);
	system(ledoff);
	sleep(1);

}

void blinkdash() 
{
	system(ledon);
	sleep(1.5);
	system(ledoff);
	sleep(1);
	
}

void blink1() 
{
	blinkdot();
	blinkdash();
	blinkdash();
	blinkdash();        
	sleep(1.5);
	
}

void blink2() 
{
	blinkdot();
    	blinkdot();
	blinkdash();
	blinkdash();
	blinkdash();
	sleep(1.5);
	
}

void blink3() 
{
	blinkdot();
	blinkdot();
	blinkdot();
	blinkdash();
	blinkdash();
	sleep(1.5);
	
}

void blink4() 
{
	blinkdot();
	blinkdot();
	blinkdot();
	blinkdot();
	sleep(1.5);

}

void blink5() 
{
	int c = 5;
	while (c--) 
		blinkdot();
	
	sleep(1.5);
	
}

void blink6() 
{
	blinkdash();
	int c = 4;
	while (c--) 
		blinkdot();

	sleep(1.5);
	
}

void blink7() 
{
	blinkdash();
	blinkdash();
	int c = 3;
	while (c--) 
		blinkdot();
		
	sleep(1.5);

}

void blink8() 
{
	blinkdash();
	blinkdash();
	blinkdash();
	blinkdot();
	blinkdot();
	sleep(1.5);

}

void blink9() 
{
	int c = 4;
	while (c--) 
		blinkdash();
		
	blinkdot();
	sleep(1.5);
	
}

void blink0()
{
	int c = 5;
	while (c--) 
		blinkdash();
	
	sleep(1.5);
	
}

void blinkperiod() 
{
	blinkdot();
	blinkdash();
	blinkdot();
	blinkdash();
	blinkdot();
	blinkdash();
	sleep(1.5);
	
}

